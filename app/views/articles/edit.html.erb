<h1>Edit Article</h1>

<%= form_for :article , url: {action: "update"}  do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
   
    
  </p>
 
  <p>
    <%= f.label :text %>
    <br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit :value => "Update" %>
  </p>
<% end %>



<%= button_to "Remove", delete_article_path(params[:id]) , :class => "btn btn-primary btn-xs", :method => :get  %>